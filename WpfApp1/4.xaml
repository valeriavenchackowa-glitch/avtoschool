<Window x:Class="WpfApp1._4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Desktop - 3"
		Height="768"  Width="1024"  Background="#414141"
        WindowStartupLocation="CenterScreen">

	<Window.Resources>
		<ControlTemplate x:Key="RoundedButtonTemplate" TargetType="Button">
			<Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5" Padding="{TemplateBinding Padding}">
				<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
			</Border>
		</ControlTemplate>

		<ControlTemplate x:Key="RoundedPaymentButtonTemplate" TargetType="Button">
			<Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10" Padding="{TemplateBinding Padding}">
				<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
			</Border>
		</ControlTemplate>

		<ControlTemplate x:Key="RoundedTextBoxTemplate" TargetType="{x:Type TextBox}">
			<Border Background="{TemplateBinding Background}" CornerRadius="5">
				<ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
			</Border>
		</ControlTemplate>

		<Style x:Key="TopMenuButton" TargetType="Button">
			<Setter Property="Background" Value="#A0A0A0"/>
			<Setter Property="Foreground" Value="#414141"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="15,5"/>
			<Setter Property="Margin" Value="10,0"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Template" Value="{StaticResource RoundedButtonTemplate}"/>
		</Style>

		<Style x:Key="TopMenuButtonActive" TargetType="Button" BasedOn="{StaticResource TopMenuButton}">
			<Setter Property="Background" Value="#651111"/>
			<Setter Property="Foreground" Value="White"/>
		</Style>

		<Style x:Key="SubMenuButton" TargetType="Button">
			<Setter Property="Background" Value="#414141"/>
			<Setter Property="Foreground" Value="#C2C2C2"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="25,10"/>
			<Setter Property="Margin" Value="5,0"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Template" Value="{StaticResource RoundedButtonTemplate}"/>
		</Style>

		<Style x:Key="SubMenuButtonActive" TargetType="Button" BasedOn="{StaticResource SubMenuButton}">
			<Setter Property="Background" Value="#651111"/>
			<Setter Property="Foreground" Value="White"/>
		</Style>

		<Style x:Key="InputTextBox" TargetType="TextBox">
			<Setter Property="Height" Value="35"/>
			<Setter Property="Background" Value="#999999"/>
			<Setter Property="Foreground" Value="#414141"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Margin" Value="0,0,0,15"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
			<Setter Property="Padding" Value="10,0,0,0"/>
			<Setter Property="Template" Value="{StaticResource RoundedTextBoxTemplate}"/>
		</Style>

		<Style x:Key="PaymentOptionButton" TargetType="Button">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="Foreground" Value="#414141"/>
			<Setter Property="BorderBrush" Value="#414141"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="Padding" Value="15,5"/>
			<Setter Property="Margin" Value="5,0"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Template" Value="{StaticResource RoundedPaymentButtonTemplate}"/>
		</Style>

		<Style x:Key="PaymentOptionButtonActive" TargetType="Button" BasedOn="{StaticResource PaymentOptionButton}">
			<Setter Property="Background" Value="#651111"/>
			<Setter Property="BorderBrush" Value="#651111"/>
			<Setter Property="Foreground" Value="White"/>
		</Style>

		<Style x:Key="PayButton" TargetType="Button">
			<Setter Property="Background" Value="#651111"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="40,10"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Template" Value="{StaticResource RoundedButtonTemplate}"/>
		</Style>

	</Window.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="60"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="200"/>
		</Grid.RowDefinitions>

		<DockPanel Grid.Row="0" VerticalAlignment="Center" Margin="0,0,20,0">
			<Button Content="&#x27A4;" 
                    FontSize="24" FontWeight="Bold" Background="Transparent" 
                    BorderBrush="Transparent" Foreground="#C2C2C2" 
                    DockPanel.Dock="Right" Width="40" Height="40" Padding="0" Click="Button_Click"/>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Button Content="Главная" Style="{StaticResource TopMenuButton}" Height="38" Width="101" Click="Button_Click_2"/>
				<Button Content="Мой профиль" Style="{StaticResource TopMenuButtonActive}"/>
				<Button Content="Обучение" Style="{StaticResource TopMenuButton}" Click="Button_Click_1"/>
				<Button Content="Расписание" Style="{StaticResource TopMenuButton}" Click="Button_Click_3"/>
			</StackPanel>
		</DockPanel>

		<StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">

			<Border Width="150" Height="150" CornerRadius="75" Background="#888888"/>

			<StackPanel Orientation="Horizontal" Margin="0,10,0,40" HorizontalAlignment="Center">
				<Button Content="Аккаунт" Style="{StaticResource SubMenuButtonActive}" Click="MenuItem_Click" />
				<Button Content="Документы" Style="{StaticResource SubMenuButton}" Click="MenuItem_Click" />
				<Button Content="Пароль" Style="{StaticResource SubMenuButton}" Click="MenuItem_Click" />
			</StackPanel>

			<StackPanel Width="400">
				<TextBlock Text="ФИО" Foreground="#C2C2C2" FontSize="16" Margin="0,0,0,5"/>
				<TextBox Style="{StaticResource InputTextBox}"/>
				<TextBlock Text="Телефон" Foreground="#C2C2C2" Margin="0,0,0,5" FontSize="16"/>
				<TextBox Style="{StaticResource InputTextBox}"/>

				<TextBlock Text="Категория" Foreground="#C2C2C2" Margin="0,0,0,5" FontSize="16"/>
				<TextBox Style="{StaticResource InputTextBox}"/>
			</StackPanel>
		</StackPanel>

		<Grid Grid.Row="2" Background="#651111">
			<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				<TextBlock Text="Оплата:" Foreground="#C2C2C2" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

				<Border Background="#C2C2C2" CornerRadius="5" Padding="30,20" Width="300" Height="150">
					<StackPanel HorizontalAlignment="Center">
						<StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center">
							<Button Content="Категория: B" Style="{StaticResource PaymentOptionButtonActive}" />
							<Button Content="Рассрочка" Style="{StaticResource PaymentOptionButton}" />
						</StackPanel>

						<TextBlock Text="Цена: 35000 руб" Foreground="#414141" FontSize="16" Margin="0,0,0,10" HorizontalAlignment="Center"/>

						<Button Content="Оплатить" Style="{StaticResource PayButton}" Click="PayButton_Click" />
					</StackPanel>
				</Border>
			</StackPanel>
		</Grid>
	</Grid>
</Window>