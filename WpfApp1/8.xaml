<Window x:Class="WpfApp1._8"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desktop - 10" Height="600" Width="800"
        Background="#E0E0E0"
        FontFamily="Segoe UI">

	<Grid>

		<Grid.Resources>
			<Style TargetType="TextBlock" x:Key="MenuItemTextStyle">
				<Setter Property="Foreground" Value="#80333A"/>
				<Setter Property="FontSize" Value="24"/>
				<Setter Property="HorizontalAlignment" Value="Center"/>
				<Setter Property="VerticalAlignment" Value="Center"/>
			</Style>

			<Style TargetType="Button" x:Key="MenuButtonStyle">
				<Setter Property="Height" Value="65"/>
				<Setter Property="Background" Value="#E0E0E0"/>
				<Setter Property="BorderThickness" Value="0"/>
				<Setter Property="Cursor" Value="Hand"/>
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="Button">
							<Border x:Name="ButtonBorder"
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
								<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
							</Border>
							<ControlTemplate.Triggers>
								<Trigger Property="IsMouseOver" Value="True">
									<Setter TargetName="ButtonBorder" Property="Background" Value="#D0D0D0"/>
								</Trigger>
								<Trigger Property="IsPressed" Value="True">
									<Setter TargetName="ButtonBorder" Property="Background" Value="#C0C0C0"/>
								</Trigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>
		</Grid.Resources>

		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Border Grid.Row="0" Background="#3C3B3B" Height="80">
			<TextBlock Text="ADMIN PANEL"
                       Foreground="White"
                       FontSize="36"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="0,10,0,10"/>
		</Border>

		<StackPanel Grid.Row="1" VerticalAlignment="Top" Orientation="Vertical">

			<Button Style="{StaticResource MenuButtonStyle}" Click="Button_Click">
				<TextBlock Text="Группы" Style="{StaticResource MenuItemTextStyle}"/>
			</Button>

			<Border Height="10" Background="#3C3B3B"/>

			<Button Style="{StaticResource MenuButtonStyle}" Click="Button_Click_1">
				<TextBlock Text="Контракты" Style="{StaticResource MenuItemTextStyle}"/>
			</Button>

			<Border Height="10" Background="#3C3B3B"/>

			<Button Style="{StaticResource MenuButtonStyle}" Click="Button_Click_2">
				<TextBlock Text="Студенты" Style="{StaticResource MenuItemTextStyle}"/>
			</Button>

			<Border Height="10" Background="#3C3B3B"/>

			<Button Style="{StaticResource MenuButtonStyle}" Click="Button_Click_3">
				<TextBlock Text="Преподаватели" Style="{StaticResource MenuItemTextStyle}"/>
			</Button>

			<Border Height="10" Background="#3C3B3B"/>

			<Button Style="{StaticResource MenuButtonStyle}" Click="Button_Click_4">
				<TextBlock Text="Пользователи" Style="{StaticResource MenuItemTextStyle}"/>
			</Button>

			<Border Background="#3C3B3B" Height="200" VerticalAlignment="Stretch"/>

		</StackPanel>
	</Grid>
</Window>