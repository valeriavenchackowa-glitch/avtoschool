<Window x:Class="WpfApp1._14"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="_14" Height="1024" Width="1440">
	<Window.Resources>
		<Style x:Key="AccentButtonStyle" TargetType="{x:Type Button}">
			<Setter Property="Background" Value="#651111"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="15, 5"/>
			<Setter Property="Cursor" Value="Hand"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Border Background="{TemplateBinding Background}"
                            CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#FF8B0000"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style TargetType="{x:Type DataGrid}">
			<Setter Property="Background" Value="#2A2A2A"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderBrush" Value="#444444"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="GridLinesVisibility" Value="Horizontal"/>
			<Setter Property="HorizontalGridLinesBrush" Value="#444444"/>
			<Setter Property="VerticalGridLinesBrush" Value="#444444"/>
			<Setter Property="RowBackground" Value="#2A2A2A"/>
			<Setter Property="AlternatingRowBackground" Value="#333333"/>
		</Style>

		<Style TargetType="{x:Type DataGridColumnHeader}">
			<Setter Property="Background" Value="#651111"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Padding" Value="10, 8"/>
			<Setter Property="BorderBrush" Value="#444444"/>
			<Setter Property="BorderThickness" Value="0,0,1,1"/>
		</Style>

		<Style TargetType="{x:Type DataGridCell}">
			<Setter Property="Padding" Value="10, 5"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Style.Triggers>
				<Trigger Property="IsSelected" Value="True">
					<Setter Property="Background" Value="#4A0B0B"/>
					<Setter Property="Foreground" Value="White"/>
				</Trigger>
			</Style.Triggers>
		</Style>
	</Window.Resources>
	<Grid Width="1440" Height="1024" Background="#FF1E1E1E">
		<StackPanel Grid.Row="0" Margin="0,0,100,969">
			<TextBlock Text="СПИСОК СТУДЕНТОВ"
				FontSize="36"
				FontWeight="Bold"
				Foreground="#FF8B0000"
				Margin="0,0,0,5"/>
			<Border Height="2" Background="#444444"/>
		</StackPanel>

		<Grid Margin="0,85,100,899">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<TextBox Grid.Column="0"
				x:Name="LastnameBox"
				Height="40"
				Background="#333333"
				Foreground="White"
				BorderBrush="#651111"
				BorderThickness="1"
				Padding="10,0"
				FontSize="16"
				VerticalContentAlignment="Center"
				Margin="0,0,997,0"
				Text="Фамилия"/>

			<Button Grid.Column="1"
				x:Name="AddStudentButton"
				Content="+ ДОБАВИТЬ СТУДЕНТА"
				Padding="20, 5"
				Height="40" Click="AddStudentButton_Click"/>
			<TextBox Grid.Column="0"
	   x:Name="FirstnameBox"
	   Height="40"
	   Background="#333333"
	   Foreground="White"
	   BorderBrush="#651111"
	   BorderThickness="1"
	   Padding="10,0"
	   FontSize="16"
	   VerticalContentAlignment="Center"
	   Margin="212,0,790,0"
	   Text="Имя"/>
			<TextBox Grid.Column="0"
	   x:Name="PatronymicBox"
	   Height="40"
	   Background="#333333"
	   Foreground="White"
	   BorderBrush="#651111"
	   BorderThickness="1"
	   Padding="10,0"
	   FontSize="16"
	   VerticalContentAlignment="Center"
	   Margin="424,0,583,0"
	   Text="Отчество" TextChanged="SearchBox_Копировать1_TextChanged"/>
			<TextBox Grid.Column="0"
	   x:Name="PhoneBox"
	   Height="40"
	   Background="#333333"
	   Foreground="White"
	   BorderBrush="#651111"
	   BorderThickness="1"
	   Padding="10,0"
	   FontSize="16"
	   VerticalContentAlignment="Center"
	   Margin="622,0,385,0"
	   Text="Телефон" TextChanged="SearchBox_Копировать1_TextChanged"/>
			<TextBox Grid.Column="0"
	   x:Name="LoginBox"
	   Height="40"
	   Background="#333333"
	   Foreground="White"
	   BorderBrush="#651111"
	   BorderThickness="1"
	   Padding="10,0"
	   FontSize="16"
	   VerticalContentAlignment="Center"
	   Margin="813,0,195,0"
	   Text="Логин" TextChanged="SearchBox_Копировать1_TextChanged"/>
			<TextBox Grid.Column="0"
	   x:Name="PasswordBox"
	   Height="40"
	   Background="#333333"
	   Foreground="White"
	   BorderBrush="#651111"
	   BorderThickness="1"
	   Padding="10,0"
	   FontSize="16"
	   VerticalContentAlignment="Center"
	   Margin="1001,0,5,0"
	   Text="Пароль" TextChanged="SearchBox_Копировать1_TextChanged"/>
		</Grid>

	</Grid>
</Window>
