<Window x:Class="WpfApp1._6"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desktop - 6" Height="650" Width="1000">

    <Window.Resources>
        <Style TargetType="{x:Type Button}" x:Key="MainMenuButton">
            <Setter Property="Background" Value="#606060"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="AccentMenuButton" BasedOn="{StaticResource MainMenuButton}">
            <Setter Property="Background" Value="#651111"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="HeaderTextStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="10,5,10,15"/>
        </Style>

        <Style TargetType="{x:Type TextBlock}" x:Key="CellTextStyle">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10,5,10,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Fill="#484848"/>
        <Rectangle Grid.Row="1" Fill="#651111"/>

        <Grid Grid.Row="0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Height="60">
                <TextBlock Text="Desktop - 6" Foreground="LightGray" VerticalAlignment="Top" Margin="10,5,0,0" FontSize="12"/>

                <StackPanel Orientation="Horizontal" Margin="0,15,20,0" Width="362">
                    <Button Content="Главная" Style="{StaticResource MainMenuButton}"/>
                    <Button Content="Мой профиль" Style="{StaticResource MainMenuButton}"/>
                    <Button Content="Обучение" Style="{StaticResource MainMenuButton}"/>
                    <Button Content="Расписание" Style="{StaticResource AccentMenuButton}"/>
                </StackPanel>
            </DockPanel>

            <Grid Grid.Row="1" Width="700" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="Дата и время" Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Инструктор" Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Группа/Категория" Style="{StaticResource HeaderTextStyle}"/>

                <Rectangle Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Height="1" Fill="Gray" VerticalAlignment="Top"/>
                <Rectangle Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Height="1" Fill="Gray" VerticalAlignment="Top"/>
                <Rectangle Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Height="1" Fill="Gray" VerticalAlignment="Top"/>
                <Rectangle Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Height="1" Fill="Gray" VerticalAlignment="Top"/>
                <Rectangle Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Height="1" Fill="Gray" VerticalAlignment="Top"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="2024-01-16 09:00" Style="{StaticResource CellTextStyle}"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="Савостьянов Захар Александрович" Style="{StaticResource CellTextStyle}"/>
                <TextBlock Grid.Row="1" Grid.Column="2" Text="Утренняя A/A" Style="{StaticResource CellTextStyle}"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="2024-01-16 10:30" Style="{StaticResource CellTextStyle}"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="Иванов Петр Алексеевич" Style="{StaticResource CellTextStyle}"/>
                <TextBlock Grid.Row="2" Grid.Column="2" Text="Утренняя Б/Б" Style="{StaticResource CellTextStyle}"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="2024-01-16 18:00" Style="{StaticResource CellTextStyle}"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="Сидорова Мария Викторовна" Style="{StaticResource CellTextStyle}"/>
                <TextBlock Grid.Row="3" Grid.Column="2" Text="Утренняя А/А" Style="{StaticResource CellTextStyle}"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="2024-01-20 15:00" Style="{StaticResource CellTextStyle}"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="Прокопенко Александра Сергеевна" Style="{StaticResource CellTextStyle}"/>
                <TextBlock Grid.Row="4" Grid.Column="2" Text="Утренняя Б/Б" Style="{StaticResource CellTextStyle}"/>

                <TextBlock Grid.Row="5" Grid.Column="0" Text="2024-01-20 15:00" Style="{StaticResource CellTextStyle}"/>
                <TextBlock Grid.Row="5" Grid.Column="1" Text="Петрова Александра Александровна" Style="{StaticResource CellTextStyle}"/>
                <TextBlock Grid.Row="5" Grid.Column="2" Text="Выходного дня/С" Style="{StaticResource CellTextStyle}"/>
            </Grid>
        </Grid>
    </Grid>
</Window>