<Window x:Class="WpfApp1._6"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desktop - 6 - Расписание"
		Height="768"
		Width="1024"
		Background="#484848"
        WindowStartupLocation="CenterScreen">

	<Window.Resources>

		<Style TargetType="{x:Type Button}" x:Key="MainMenuButton">
			<Setter Property="Background" Value="#606060"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="15,5"/>
			<Setter Property="Margin" Value="10,0"/>
			<Setter Property="FontFamily" Value="Segoe UI"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Border Background="{TemplateBinding Background}" CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style TargetType="{x:Type Button}" x:Key="AccentMenuButton" BasedOn="{StaticResource MainMenuButton}">
			<Setter Property="Background" Value="#651111"/>
			<Setter Property="FontWeight" Value="Bold"/>
		</Style>

		<Style x:Key="HeaderTextBlockStyle" TargetType="{x:Type TextBlock}">
			<Setter Property="Foreground" Value="#C2C2C2"/>
			<Setter Property="FontSize" Value="20"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Margin" Value="0,0,0,15"/>
			<Setter Property="VerticalAlignment" Value="Top"/>
		</Style>

		<Style x:Key="ItemTextBlockStyle" TargetType="{x:Type TextBlock}">
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="Margin" Value="0,5,0,5"/>
			<Setter Property="VerticalAlignment" Value="Center"/>
		</Style>

		<Style x:Key="SeparatorLine" TargetType="{x:Type Border}">
			<Setter Property="BorderBrush" Value="#606060"/>
			<Setter Property="BorderThickness" Value="0,0,0,1"/>
			<Setter Property="Margin" Value="0,0,0,5"/>
		</Style>

	</Window.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="200"/>
		</Grid.RowDefinitions>

		<Rectangle Grid.Row="1" Fill="#651111"/>

		<Grid Grid.Row="0">
			<Grid.RowDefinitions>
				<RowDefinition Height="60"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<DockPanel Grid.Row="0" VerticalAlignment="Center" Margin="0,0,20,0">
				<Button Content="→" DockPanel.Dock="Right" 
                        FontSize="24" FontWeight="Bold" Background="Transparent" 
                        BorderBrush="Transparent" Foreground="#C2C2C2" 
                        Width="40" Height="40" Padding="0" Click="Button_Click"/>

				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
					<Button Content="Главная" Style="{StaticResource MainMenuButton}" Width="96" Click="Button_Click_3"/>
					<Button Content="Мой профиль" Style="{StaticResource MainMenuButton}" Width="113" Click="Button_Click_2"/>
					<Button Content="Обучение" Style="{StaticResource MainMenuButton}" Width="103" Click="Button_Click_1"/>
					<Button Content="Расписание" Style="{StaticResource AccentMenuButton}" Width="101"/>
				</StackPanel>
			</DockPanel>

			<Grid Grid.Row="1" Width="800" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="1.5*"/>
					<ColumnDefinition Width="2*"/>
					<ColumnDefinition Width="1.5*"/>
				</Grid.ColumnDefinitions>

				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<TextBlock Grid.Column="0" Text="Дата и время" Style="{StaticResource HeaderTextBlockStyle}"/>
				<TextBlock Grid.Column="1" Text="Инструктор" Style="{StaticResource HeaderTextBlockStyle}"/>
				<TextBlock Grid.Column="2" Text="Группа/Категория" Style="{StaticResource HeaderTextBlockStyle}"/>

				<Border Grid.Row="1" Grid.ColumnSpan="3" Style="{StaticResource SeparatorLine}"/>
				<TextBlock Grid.Row="1" Grid.Column="0" Text="2024-01-16 09:00" Style="{StaticResource ItemTextBlockStyle}"/>
				<TextBlock Grid.Row="1" Grid.Column="1" Text="Савостьянов Захар Александрович" Style="{StaticResource ItemTextBlockStyle}"/>
				<TextBlock Grid.Row="1" Grid.Column="2" Text="Утренняя А/А" Style="{StaticResource ItemTextBlockStyle}"/>

				<Border Grid.Row="2" Grid.ColumnSpan="3" Style="{StaticResource SeparatorLine}"/>
				<TextBlock Grid.Row="2" Grid.Column="0" Text="2024-01-16 10:30" Style="{StaticResource ItemTextBlockStyle}"/>
				<TextBlock Grid.Row="2" Grid.Column="1" Text="Иванов Петр Алексеевич" Style="{StaticResource ItemTextBlockStyle}"/>
				<TextBlock Grid.Row="2" Grid.Column="2" Text="Утренняя Б/Б" Style="{StaticResource ItemTextBlockStyle}"/>

				<Border Grid.Row="3" Grid.ColumnSpan="3" Style="{StaticResource SeparatorLine}"/>
				<TextBlock Grid.Row="3" Grid.Column="0" Text="2024-01-16 18:00" Style="{StaticResource ItemTextBlockStyle}"/>
				<TextBlock Grid.Row="3" Grid.Column="1" Text="Сидорова Мария Викторовна" Style="{StaticResource ItemTextBlockStyle}"/>
				<TextBlock Grid.Row="3" Grid.Column="2" Text="Утренняя А/А" Style="{StaticResource ItemTextBlockStyle}"/>

				<Border Grid.Row="4" Grid.ColumnSpan="3" Style="{StaticResource SeparatorLine}"/>
				<TextBlock Grid.Row="4" Grid.Column="0" Text="2024-01-20 15:00" Style="{StaticResource ItemTextBlockStyle}"/>
				<TextBlock Grid.Row="4" Grid.Column="1" Text="Прокопенко Александра Сергеевна" Style="{StaticResource ItemTextBlockStyle}"/>
				<TextBlock Grid.Row="4" Grid.Column="2" Text="Утренняя Б/Б" Style="{StaticResource ItemTextBlockStyle}"/>

				<Border Grid.Row="5" Grid.ColumnSpan="3" Style="{StaticResource SeparatorLine}"/>
				<TextBlock Grid.Row="5" Grid.Column="0" Text="2024-01-20 15:00" Style="{StaticResource ItemTextBlockStyle}"/>
				<TextBlock Grid.Row="5" Grid.Column="1" Text="Петрова Александра Александровна" Style="{StaticResource ItemTextBlockStyle}"/>
				<TextBlock Grid.Row="5" Grid.Column="2" Text="Выходного дня/С" Style="{StaticResource ItemTextBlockStyle}"/>

				<Border Grid.Row="6" Grid.ColumnSpan="3" Style="{StaticResource SeparatorLine}"/>
			</Grid>
		</Grid>

	</Grid>
</Window>