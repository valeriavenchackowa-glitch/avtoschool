<Window x:Class="SmoothDrive.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smooth Drive" Height="720" Width="1280"
        WindowStyle="None" WindowStartupLocation="CenterScreen" Background="Black">

    <Grid>
        <!-- Заменили изображение на чёрный фон -->
        <Rectangle Fill="Black"/>

        <!-- Красный слой внизу -->
        <Rectangle Fill="#408B0000" VerticalAlignment="Bottom" Height="150"/>

        <!-- Логотип -->
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,50,0,0">
            <TextBlock Text="Smooth Drive" FontSize="64" Foreground="White" FontWeight="Bold" />
            <TextBlock Text="avtoschool" FontSize="24" Foreground="#FF8B0000" FontStyle="Italic" Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Блок авторизации -->
        <Border Background="#CC333333" CornerRadius="15" Padding="20"
                Width="300" Height="200"
                HorizontalAlignment="Left" VerticalAlignment="Center" Margin="50,0,0,0">

            <StackPanel>
                <TextBlock Text="Авторизация" FontSize="18" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <!-- Поле Логин -->
                <TextBox Margin="0,0,0,10" 
                         Background="White" Foreground="Black" 
                         Padding="10" BorderBrush="Gray" BorderThickness="1">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Border Name="border" BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                Background="{TemplateBinding Background}" 
                                                SnapsToDevicePixels="True">
                                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Поле Пароль -->
                <PasswordBox Margin="0,0,0,15" 
                             Background="White" Foreground="Black" 
                             Padding="10" BorderBrush="Gray" BorderThickness="1">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="PasswordBox">
                                        <Border Name="border" BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                Background="{TemplateBinding Background}" 
                                                SnapsToDevicePixels="True">
                                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>

                <!-- Кнопка Войти -->
                <Button Content="Войти" 
                        Background="#FF8B0000" Foreground="White" 
                        Padding="10,5" Margin="0,0,0,5"
                        HorizontalAlignment="Center" Width="80">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Name="border" Background="{TemplateBinding Background}" 
                                    CornerRadius="10" Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <!-- Ссылка "Забыли пароль?" -->
                <TextBlock Text="Забыли пароль?" FontSize="12" Foreground="LightGray" 
                           HorizontalAlignment="Right" Cursor="Hand" 
                           TextDecorations="Underline"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
    
