<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smooth Drive"
        WindowStyle="None" 
        Height="1024" Width="1440" WindowStartupLocation="CenterScreen"
        Background="Black">

	<Grid>
		<Rectangle Fill="Black"/>

		<Rectangle Fill="#408B0000" VerticalAlignment="Bottom" Height="150"/>

		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,150,0,0">
			<TextBlock Text="Smooth Drive" 
                       FontSize="120" 
                       Foreground="White" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"/>

			<TextBlock Text="avtoschool" 
                       FontSize="100" 
                       Foreground="#FF8B0000" 
                       FontStyle="Italic" 
                       HorizontalAlignment="Center"
                       Margin="0,-20,0,0"/>
		</StackPanel>

		<Border Background="#80FFFFFF" 
                CornerRadius="15" 
                Padding="20"
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom" Width="484" 
                Height="401" 
                Margin="0,0,0,150">
			<StackPanel>
				<TextBlock Text="Авторизация" 
                           FontSize="48" 
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>

				<StackPanel Margin="0,0,0,15">
					<TextBlock Text="Логин"
                               FontSize="14"
                               Foreground="#666666"
                               Margin="5,0,0,5"/>
					<Border Background="White" CornerRadius="8">
						<TextBox x:Name="LoginBox"
                                 Background="Transparent"
                                 Foreground="Black"
                                 BorderThickness="0"
                                 Padding="15,12"
                                 FontSize="18"/>
					</Border>
				</StackPanel>

				<StackPanel Margin="0,0,0,25">
					<TextBlock Text="Пароль"
                               FontSize="14"
                               Foreground="#666666"
                               Margin="5,0,0,5"/>
					<Border Background="White" CornerRadius="8">
						<PasswordBox x:Name="PasswordBox"
                                     Background="Transparent"
                                     Foreground="Black"
                                     BorderThickness="0"
                                     Padding="15,12"
                                     FontSize="18"/>
					</Border>
				</StackPanel>

				<Button x:Name="LoginButton" 
                        Content="Войти"
                        Background="#FF651111" 
                        Foreground="White" 
                        BorderThickness="0"
                        FontSize="32"
                        FontWeight="SemiBold"
                        Height="50"
                        Margin="0,0,0,10"
                        Cursor="Hand"
                        Click="LoginButton_Click">
					<Button.Template>
						<ControlTemplate TargetType="Button">
							<Border Background="{TemplateBinding Background}"
                                    CornerRadius="8"
                                    Padding="15,0">
								<ContentPresenter HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center"/>
							</Border>
						</ControlTemplate>
					</Button.Template>
				</Button>

				<TextBlock Text="Забыли пароль?" 
                           FontSize="18" 
                           Foreground="Black"
                           HorizontalAlignment="Right" 
                           Margin="0,0,0,10"
                           TextDecorations="Underline" 
                           Cursor="Hand"/>

				<Border Height="1" 
                        Background="#CCCCCC" 
                        Margin="0,0,0,15"/>

				<StackPanel HorizontalAlignment="Center">
					<TextBlock Text="Нет профиля?" 
                               FontSize="14" 
                               Foreground="#666666"
                               Margin="0,0,0,5"/>

					<Button x:Name="RegisterButton"
                            Content="Зарегистрироваться"
                            Background="Transparent"
                            Foreground="#2196F3"
                            BorderThickness="0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Padding="10,5"
                            Cursor="Hand">
						<Button.Template>
							<ControlTemplate TargetType="Button">
								<Border Background="Transparent"
                                        Padding="{TemplateBinding Padding}">
									<ContentPresenter HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center"/>
								</Border>
							</ControlTemplate>
						</Button.Template>
					</Button>
				</StackPanel>
			</StackPanel>
		</Border>

		<Button Content="Войти как Администратор"
                x:Name="AdminLoginButton"
                Click="AdminLoginButton_Click"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,90"
                Background="Transparent"
                BorderThickness="0"
                Foreground="White"
                FontSize="22"
                FontWeight="SemiBold"
                Cursor="Hand">
			<Button.Style>
				<Style TargetType="Button">
					<Setter Property="Template">
						<Setter.Value>
							<ControlTemplate TargetType="Button">
								<TextBlock Text="{TemplateBinding Content}"
                                           Foreground="{TemplateBinding Foreground}"
                                           FontSize="{TemplateBinding FontSize}"
                                           FontWeight="{TemplateBinding FontWeight}"
                                           TextDecorations="Underline"/>
								<ControlTemplate.Triggers>
									<Trigger Property="IsMouseOver" Value="True">
										<Setter Property="Foreground" Value="#FFFF3333"/>
									</Trigger>
								</ControlTemplate.Triggers>
							</ControlTemplate>
						</Setter.Value>
					</Setter>
				</Style>
			</Button.Style>
		</Button>
	</Grid>
</Window>