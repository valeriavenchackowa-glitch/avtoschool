<Window x:Class="WpfApp1._5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desktop - 4" Height="650" Width="1000">

    <Window.Resources>
        <Style TargetType="{x:Type Button}" x:Key="MainMenuButton">
            <Setter Property="Background" Value="#606060"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="AccentMenuButton" BasedOn="{StaticResource MainMenuButton}">
            <Setter Property="Background" Value="#651111"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style TargetType="{x:Type Border}" x:Key="LessonBlockStyle">
            <Setter Property="Background" Value="#DCDCDC"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Height" Value="55"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Padding" Value="15,0"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Fill="#484848"/>
        <Rectangle Grid.Row="1" Fill="#651111"/>

        <Grid Grid.Row="0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Height="60">
                <TextBlock Text="Desktop - 4" Foreground="LightGray" VerticalAlignment="Top" Margin="10,5,0,0" FontSize="12"/>

                <StackPanel Orientation="Horizontal" Margin="0,15,20,0" Width="433">
                    <Button Content="Главная" Style="{StaticResource MainMenuButton}" Width="143"/>
                    <Button Content="Мой профиль" Style="{StaticResource MainMenuButton}"/>
                    <Button Content="Обучение" Style="{StaticResource AccentMenuButton}"/>
                    <Button Content="Расписание" Style="{StaticResource MainMenuButton}"/>
                </StackPanel>
            </DockPanel>

            <StackPanel Grid.Row="1" Margin="100,20,100,50">

                <TextBlock Text="Блок 0" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
                <Border Style="{StaticResource LessonBlockStyle}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="61*"/>
                            <ColumnDefinition Width="49*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Вводное занятие" FontSize="18" Foreground="#484848" VerticalAlignment="Top" Margin="-10,12,10,0" Grid.ColumnSpan="2"/>
                        <TextBlock Text="→" FontSize="24" Foreground="#651111" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Margin="322,0,0,0"/>
                    </Grid>
                </Border>

                <TextBlock Text="Блок 1" Foreground="White" FontSize="14" Margin="0,20,0,5"/>
                <Border Style="{StaticResource LessonBlockStyle}">
                    <Grid>
                        <TextBlock Text="Общие положения" FontSize="18" Foreground="#484848" VerticalAlignment="Center"/>
                        <TextBlock Text="→" FontSize="24" Foreground="#651111" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource LessonBlockStyle}" Margin="0,10,0,0">
                    <Grid>
                        <TextBlock Text="Обязанности участников дорожного движения" FontSize="18" Foreground="#484848" VerticalAlignment="Center"/>
                        <TextBlock Text="→" FontSize="24" Foreground="#651111" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource LessonBlockStyle}" Margin="0,10,0,0">
                    <Grid>
                        <TextBlock Text="Дорожные знаки" FontSize="18" Foreground="#484848" VerticalAlignment="Center"/>
                        <TextBlock Text="→" FontSize="24" Foreground="#651111" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource LessonBlockStyle}" Margin="0,10,0,0">
                    <Grid>
                        <TextBlock Text="Дорожная разметка" FontSize="18" Foreground="#484848" VerticalAlignment="Center"/>
                        <TextBlock Text="→" FontSize="24" Foreground="#651111" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

                <Border Style="{StaticResource LessonBlockStyle}" Margin="0,10,0,0">
                    <Grid>
                        <TextBlock Text="Промежуточный зачет 1" FontSize="18" Foreground="#484848" VerticalAlignment="Center"/>
                        <TextBlock Text="→" FontSize="24" Foreground="#651111" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </Border>

            </StackPanel>
        </Grid>
    </Grid>
</Window>