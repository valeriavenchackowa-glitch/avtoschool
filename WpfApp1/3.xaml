<Window x:Class="SmoothDrive.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smooth Drive" Height="1024" Width="1440"
        Background="#F5F5F5">

    <Grid Width="1440" Height="1024">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="10*"/>
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="1297*"/>
            <ColumnDefinition Width="101*"/>
        </Grid.ColumnDefinitions>
        <!-- Меню слева -->
        <StackPanel Background="White" Margin="10,20,10,830" Grid.Column="3" Grid.ColumnSpan="3">
            <TextBlock Text="Главная" FontSize="16" FontWeight="Bold" Margin="10,20,10,10"/>
            <TextBlock Text="Мой профиль" FontSize="14"/>
            <TextBlock Text="Обучение" FontSize="14" Margin="10,10"/>
            <TextBlock Text="Расписание" FontSize="14" Margin="10,10"/>
        </StackPanel>

        <!-- Основной контент -->
        <StackPanel Margin="96,239,47,-159" Grid.Column="4">
            <!-- Заголовок -->
            <TextBlock Text="Автошкола 'Smooth Drive' - уникальное учебное пространство в г.Санкт-Петербург"
                       FontSize="16" Margin="0,0,0,30"/>

            <!-- Основная информация -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Левая колонка -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <TextBlock Text="Smooth Drive" FontSize="28" FontWeight="Bold" Margin="0,0,0,30"/>

                    <!-- Плашка Теория -->
                    <Border Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Теория" FontSize="18" FontWeight="Bold"/>
                                <TextBlock Text="0/20" FontSize="18" Foreground="Gray" Margin="10,0,0,0"/>
                            </StackPanel>
                            <TextBlock Text="0%" FontSize="16" Foreground="Gray" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>
                    <Border Background="White" CornerRadius="10" Padding="20" RenderTransformOrigin="0.494,0.549">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Вождение" FontSize="18" FontWeight="Bold"/>
                                <TextBlock Text="0/5" FontSize="18" Foreground="Gray" Margin="10,0,0,0"/>
                            </StackPanel>
                            <TextBlock Text="0%" FontSize="16" Foreground="Gray" Margin="0,10,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Плашка Вождение -->
                </StackPanel>

                <!-- Правая колонка - Сертификат -->
                <Border Grid.Column="1" Background="White" CornerRadius="10" Padding="25">
                    <StackPanel>
                        <TextBlock Text="Сертификат — отличный подарок по любому поводу!"
                                   FontSize="18" FontWeight="Bold" TextWrapping="Wrap" Margin="0,0,0,15"/>

                        <TextBlock Text="Мы заполним сертификат, распечатаем его и доставим по любому адресу в Санкт-Петербурге."
                                   FontSize="14" Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,25"/>

                        <Button Content="Заказать сертификат" 
                                Background="#FF4500" 
                                Foreground="White"
                                FontSize="16" 
                                Height="40" 
                                Width="200"
                                HorizontalAlignment="Left"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Плашка Экзамен -->
            <Border Background="White" CornerRadius="10" Padding="25" Margin="0,30,0,0" Width="400">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Экзамен" FontSize="20" FontWeight="Bold"/>
                        <TextBlock Text="0%" FontSize="20" Foreground="Gray" Margin="20,0,0,0"/>
                    </StackPanel>

                    <!-- Здесь можно добавить прогресс-бар если нужно -->
                    <Border Height="10" Background="#E0E0E0" CornerRadius="5">
                        <Border Width="0" Background="Gray" CornerRadius="5"/>
                    </Border>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Window>