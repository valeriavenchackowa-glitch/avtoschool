<Window x:Class="WpfApp1._7"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desktop - 8" Height="650" Width="1000">

    <Window.Resources>
        <Style TargetType="{x:Type Button}" x:Key="MainMenuButton">
            <Setter Property="Background" Value="#606060"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,5"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type Button}" x:Key="AccentMenuButton" BasedOn="{StaticResource MainMenuButton}">
            <Setter Property="Background" Value="#651111"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Fill="#484848"/>
        <Rectangle Grid.Row="1" Fill="#651111"/>

        <Grid Grid.Row="0" Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <DockPanel Grid.Row="0" Height="60">
                <TextBlock Text="Desktop - 8" Foreground="LightGray" VerticalAlignment="Top" Margin="10,5,0,0" FontSize="12"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,20,0">
                    <Button Content="Главная" Style="{StaticResource MainMenuButton}"/>
                    <Button Content="Мой профиль" Style="{StaticResource MainMenuButton}"/>
                    <Button Content="Обучение" Style="{StaticResource AccentMenuButton}"/>
                    <Button Content="Расписание" Style="{StaticResource MainMenuButton}"/>
                </StackPanel>
            </DockPanel>

            <StackPanel Grid.Row="1" Width="800" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,30">

                <TextBlock Text="Курсы/Вводное занятие" Foreground="#DCDCDC" FontSize="14" Margin="0,0,0,10"/>

                <TextBlock Text="Вводное занятие" Foreground="White" FontSize="36" FontWeight="Bold" Margin="0,0,0,20"/>

                <TextBlock Text="Приветствуем вас!" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>
                <TextBlock Text="Вы сделали важный шаг — решили стать водителем. Это вводное занятие — начало увлекательного пути, и мы поможем вам пройти его с уверенностью."
                           Foreground="White" FontSize="16" TextWrapping="Wrap" LineHeight="24" Margin="0,0,0,30"/>

                <TextBlock Text="Что ждет вас сегодня?" Foreground="White" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

                <StackPanel Margin="20,0,0,0">

                    <Grid Margin="0,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="•" Foreground="White" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <TextBlock Grid.Column="1" Text="Знакомство без галстуков: Мы расскажем о нашей команде — опытных преподавателях и чутких инструкторах, которые станут вашими гидами в мире дорог." 
                                   Foreground="White" FontSize="16" TextWrapping="Wrap" LineHeight="24"/>
                    </Grid>

                    <Grid Margin="0,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="•" Foreground="White" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <TextBlock Grid.Column="1" Text="План игры: Вы увидите всю карту обучения от «А» до «Я»: сколько продлится теория, как строится практика и что ждет на экзамене." 
                                   Foreground="White" FontSize="16" TextWrapping="Wrap" LineHeight="24"/>
                    </Grid>

                    <Grid Margin="0,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="•" Foreground="White" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <TextBlock Grid.Column="1" Text="Разбираемся с бумагами: Поможем сориентироваться в документах, чтобы все организационные вопросы решались легко и быстро." 
                                   Foreground="White" FontSize="16" TextWrapping="Wrap" LineHeight="24"/>
                    </Grid>

                    <Grid Margin="0,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="•" Foreground="White" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <TextBlock Grid.Column="1" Text="Первый взгляд на ПДД: Мы не будем грузить вас скучной теорией! Начнем с самого интересного и важного, чтобы вы сразу почувствовали: «Я могу это понять!»" 
                                   Foreground="White" FontSize="16" TextWrapping="Wrap" LineHeight="24"/>
                    </Grid>

                    <Grid Margin="0,5,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="•" Foreground="White" Margin="0,0,10,0" VerticalAlignment="Top"/>
                        <TextBlock Grid.Column="1" Text="Ответы на все «Что? Где? Когда?»: Самый важный блок. Не стесняйтесь задавать любые вопросы!" 
                                   Foreground="White" FontSize="16" TextWrapping="Wrap" LineHeight="24"/>
                    </Grid>

                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Window>