<Window x:Class="WpfApp1._7"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desktop - 13 - Вводное занятие (1024x1440)"
		Height="768"
		Width="1024"
		Background="#484848"
        WindowStartupLocation="CenterScreen">

	<Window.Resources>

		<Style TargetType="{x:Type Button}" x:Key="MainMenuButton">
			<Setter Property="Background" Value="#606060"/>
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="15,5"/>
			<Setter Property="Margin" Value="10,0"/>
			<Setter Property="FontFamily" Value="Segoe UI"/>
			<Setter Property="FontSize" Value="16"/>
			<Setter Property="FontWeight" Value="SemiBold"/>
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Border Background="{TemplateBinding Background}" CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>

		<Style TargetType="{x:Type Button}" x:Key="AccentMenuButton" BasedOn="{StaticResource MainMenuButton}">
			<Setter Property="Background" Value="#651111"/>
			<Setter Property="FontWeight" Value="Bold"/>
		</Style>

		<Style x:Key="ContentTextStyle" TargetType="{x:Type TextBlock}">
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontSize" Value="18"/>
			<Setter Property="TextWrapping" Value="Wrap"/>
			<Setter Property="Margin" Value="0,10,0,0"/>
			<Setter Property="Width" Value="850"/>
		</Style>

		<Style x:Key="HeaderStyle" TargetType="{x:Type TextBlock}">
			<Setter Property="Foreground" Value="White"/>
			<Setter Property="FontSize" Value="36"/>
			<Setter Property="FontWeight" Value="Bold"/>
			<Setter Property="Margin" Value="0,10,0,10"/>
		</Style>

	</Window.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="200"/>
		</Grid.RowDefinitions>

		<Rectangle Grid.Row="1" Fill="#651111"/>

		<Grid Grid.Row="0" Height="1440">
			<Grid.RowDefinitions>
				<RowDefinition Height="60"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<DockPanel Grid.Row="0" VerticalAlignment="Center" Margin="0,0,20,0">
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
					<Button Content="Главная" Style="{StaticResource MainMenuButton}" Width="96" Height="40" Click="Button_Click_2"/>
					<Button Content="Мой профиль" Style="{StaticResource MainMenuButton}" Width="117" Click="Button_Click_1"/>
					<Button Content="Обучение" Style="{StaticResource AccentMenuButton}" Width="106"/>
					<Button Content="Расписание" Style="{StaticResource MainMenuButton}" Width="105" Click="Button_Click_4"/>
				</StackPanel>
			</DockPanel>

			<StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0">

				<TextBlock Text="Курсы/Вводное занятие" Foreground="#C2C2C2" FontSize="16" HorizontalAlignment="Left" Width="850"/>


				<TextBlock Text="Вводное занятие" Style="{StaticResource HeaderStyle}" HorizontalAlignment="Left" Width="850"/>

				<TextBlock Text="Приветствуем вас!" Style="{StaticResource ContentTextStyle}" FontWeight="SemiBold"/>
				<TextBlock Text="Вы сделали важный шаг — решили стать водителем. Это вводное занятие — начало увлекательного пути, и мы поможем вам пройти его с уверенностью." 
                           Style="{StaticResource ContentTextStyle}"/>

				<TextBlock Text="Что ждет вас сегодня?" Style="{StaticResource ContentTextStyle}" FontWeight="SemiBold" Margin="0,30,0,10"/>

				<StackPanel Width="850" HorizontalAlignment="Left">
					<TextBlock Style="{StaticResource ContentTextStyle}">
                        <Run Text="• Знакомство без галстуков: " Foreground="White"/>
                        <Run Text="Мы расскажем о нашей команде — опытных преподавателях и чутких инструкторах, которые станут вашими гидами в мире дорог." Foreground="#C2C2C2"/>
					</TextBlock>
					<TextBlock Style="{StaticResource ContentTextStyle}">
                        <Run Text="• План игры: " Foreground="White"/>
                        <Run Text="Вы увидите всю карту обучения от «А» до «Я»: сколько продлится теория, как строится практика и что ждет на экзамене." Foreground="#C2C2C2"/>
					</TextBlock>
					<TextBlock Style="{StaticResource ContentTextStyle}">
                        <Run Text="• Разбираемся с бумагами: " Foreground="White"/>
                        <Run Text="Поможем сориентироваться в документах, чтобы все организационные вопросы решались легко и быстро." Foreground="#C2C2C2"/>
					</TextBlock>
					<TextBlock Style="{StaticResource ContentTextStyle}">
                        <Run Text="• Первый взгляд на ПДД: " Foreground="White"/>
                        <Run Text="Мы не будем грузить вас скучной теорией! Начнем с самого интересного и важного, чтобы вы сразу почувствовали: «Я могу это понять!»" Foreground="#C2C2C2"/>
					</TextBlock>
					<TextBlock Style="{StaticResource ContentTextStyle}">
                        <Run Text="• Ответы на все «Что? Где? Когда?»: " Foreground="White"/>
                        <Run Text="Самый важный блок. Не стесняйтесь задавать любые вопросы!" Foreground="#C2C2C2"/>
					</TextBlock>
				</StackPanel>

				<Rectangle Height="200" Fill="Transparent"/>

			</StackPanel>
		</Grid>

	</Grid>
</Window>