<Window x:Class="WpfApp1._2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Admin Login" 
        Height="1024" Width="1440" Background="#1E1E1E" 
        FontFamily="Segoe UI"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

	<Window.Resources>
		<Style x:Key="FlatButtonStyle" TargetType="{x:Type Button}">
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="{x:Type Button}">
						<Border Background="{TemplateBinding Background}"
                                CornerRadius="5">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#FF8B0000"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True">
								<Setter Property="Background" Value="#FF4A0B0B"/>
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Window.Resources>

	<Grid>
		<StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="100,0,0,0">
			<TextBlock Text="Smooth Drive" 
                       FontSize="72" 
                       FontWeight="Bold" 
                       Foreground="White"/>
			<TextBlock Text="ADMINISTRATION" 
                       FontSize="48" 
                       Foreground="#FF8B0000" 
                       Margin="0,-10,0,0"/>
		</StackPanel>

		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Width="503" Margin="787,0,0,0" Height="307">
			<TextBlock Text="ВХОД АДМИНИСТРАТОРА"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="#651111" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"/>

			<TextBlock Text="Имя пользователя:"
                       Foreground="#651111" 
                       Margin="0,0,0,5"/>
			<TextBox Height="35"
                     Background="White"
                     BorderBrush="#651111"
                     BorderThickness="1"
                     Padding="5"
                     Margin="0,0,0,15"/>

			<TextBlock Text="Пароль:"
                       Foreground="#651111" 
                       Margin="0,0,0,5"/>
			<PasswordBox Height="35"
                         Background="White"
                         BorderBrush="#651111"
                         BorderThickness="1"
                         Padding="5"
                         Margin="0,0,0,30" Width="505"/>

			<Button Content="ВОЙТИ В ПАНЕЛЬ"
                    Height="45"
                    FontSize="18"
                    FontWeight="SemiBold"
                    Background="#651111" 
                    Foreground="White"
                    BorderThickness="0"
                    Style="{StaticResource FlatButtonStyle}" Width="307" Click="Button_Click"/>

			<TextBlock Text="Забыли пароль?"
                       Foreground="#651111"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,0">
				<TextBlock.Style>
					<Style TargetType="TextBlock">
						<Style.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="TextDecorations" Value="Underline"/>
								<Setter Property="Cursor" Value="Hand"/>
							</Trigger>
						</Style.Triggers>
					</Style>
				</TextBlock.Style>
			</TextBlock>

		</StackPanel>
	</Grid>
</Window>