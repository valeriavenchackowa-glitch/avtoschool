<Window x:Class="SmoothDrive.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SmoothDrive"
        Title="Регистрация" 
        Height="1022" 
        Width="1440"
        WindowStartupLocation="CenterScreen"
        Background="Black"
        ResizeMode="NoResize">

    <Grid>
        <!-- Фоновое изображение автомобиля -->
        <Image Source="/Images/car.png" 
               Stretch="UniformToFill" 
               Opacity="0.7" Width="1440" Height="1024"/>

        <!-- Логотип в левом верхнем углу -->
        <StackPanel HorizontalAlignment="Left" 
                    VerticalAlignment="Top" Margin="90,114,0,0">
            <TextBlock Text="Smooth Drive" 
                       FontSize="137" 
                       FontWeight="Bold" 
                       Foreground="White" Width="889" Height="174" RenderTransformOrigin="0.515,1.77" Margin="1.3,-50,0,0">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform AngleX="-0.251"/>
                        <RotateTransform/>
                        <TranslateTransform X="-1.717"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Text="avtoschool" 
                       FontSize="74" 
                       Foreground="#FF651111" 
                       FontStyle="Italic" Margin="0,0,35,0"/>
        </StackPanel>

        <!-- Панель регистрации -->
        <Border Background="#CCFFFFFF" 
                CornerRadius="15" 
                Padding="25"
                HorizontalAlignment="Left" 
                VerticalAlignment="Top"
                Margin="88,439,0,0" 
                Width="446" Height="460">

            <StackPanel>
                <!-- Заголовок "Регистрация" -->
                <TextBlock Text="Регистрация" 
                           FontSize="32" 
                           FontWeight="SemiBold"
                           Foreground="#333333"
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,25"/>

                <!-- Поле Логин -->
                <TextBlock Text="Логин" 
                           FontSize="24" 
                           Foreground="#555555"
                           Margin="0,0,0,5"/>

                <Border Background="White" 
                        CornerRadius="8" 
                        BorderBrush="#CCCCCC" 
                        BorderThickness="1" 
                        Margin="0,0,0,15">
                    <TextBox Name="LoginBox" 
                             Text=""
                             Background="Transparent" 
                             Foreground="Black"
                             BorderBrush="Transparent" 
                             BorderThickness="0"
                             Padding="10"
                             FontSize="14"/>
                </Border>

                <!-- Поле Пароль -->
                <TextBlock Text="Пароль" 
                           FontSize="24" 
                           Foreground="#555555"
                           Margin="0,0,0,5"/>

                <Border Background="White" 
                        CornerRadius="8" 
                        BorderBrush="#CCCCCC" 
                        BorderThickness="1" 
                        Margin="0,0,0,15">
                    <PasswordBox Name="PasswordBox" 
                                 Background="Transparent" 
                                 Foreground="Black"
                                 BorderBrush="Transparent" 
                                 BorderThickness="0"
                                 Padding="10"
                                 FontSize="14"/>
                </Border>

                <!-- Поле Подтвердить пароль -->
                <TextBlock Text="Подтвердите пароль" 
                           FontSize="24" 
                           Foreground="#555555"
                           Margin="0,0,0,5"/>

                <Border Background="White" 
                        CornerRadius="8" 
                        BorderBrush="#CCCCCC" 
                        BorderThickness="1" 
                        Margin="0,0,0,25">
                    <PasswordBox Name="ConfirmPasswordBox" 
                                 Background="Transparent" 
                                 Foreground="Black"
                                 BorderBrush="Transparent" 
                                 BorderThickness="0"
                                 Padding="10"
                                 FontSize="14" Width="293"/>
                </Border>

                <!-- Кнопка Зарегистрироваться -->
                <Button Name="RegisterButton" 
                        Content="Зарегистрироваться"
                        Background="#FF651111" 
                        Foreground="White"
                        BorderBrush="Transparent" 
                        BorderThickness="0"
                        Height="43"
                        FontSize="24"
                        FontWeight="SemiBold"
                        HorizontalAlignment="Stretch"
                        Padding="15,0"
                        Cursor="Hand" Width="270">

                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>

                    <Button.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="#8B2323" 
                                                    Duration="0:0:0.2" 
                                                    Storyboard.TargetProperty="Background.Color"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimation To="#A52A2A" 
                                                    Duration="0:0:0.2" 
                                                    Storyboard.TargetProperty="Background.Color"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Button.Triggers>
                </Button>

                <!-- Ссылка на вход -->
                <StackPanel Margin="0,20,0,0" 
                            HorizontalAlignment="Center">
                    <TextBlock Text="Уже есть аккаунт?" 
                               FontSize="13" 
                               Foreground="#777777"/>

                    <TextBlock Text="Войти" 
                               FontSize="13" 
                               Foreground="#2196F3"
                               Cursor="Hand"
                               TextDecorations="Underline"
                               HorizontalAlignment="Center"
                               MouseLeftButtonDown="LoginLink_MouseLeftButtonDown"/>
                </StackPanel>

            </StackPanel>
        </Border>

    </Grid>
</Window>